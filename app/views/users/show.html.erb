<div class="container px-5 px-sm-0" style="margin-bottom: 15px;">
  <div class="row">
  <div class="col-md-12"><br>
  <h2><span style="background-color:#FFEBCD">マイページ・投稿レシピ一覧</span></h2>
</div>
</div>
</div>

<div class="container p-4">
  <div class="row">
  <div class="col-sm-4">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3><%= @user.name %></h3>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<div class="col-sm-8">
<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <div class="item-index d-flex flex-wrap mt-3">
          <% @recipes.each do |recipe| %>
            <div class="card m-2 p-3" style="width: 270px;">
              <%= link_to recipe_path(recipe.id) do %>
              <div class="item-img-box2"><%= attachment_image_tag(recipe, :image, size:"237x158", fallback: "no_image.png")%></div>
              <% end %>
              <p class="item-index-name font-weight-bold text-dark mt-2 mb-1"><b><%= recipe.name %></b></p>
              <td>いいね: <%= recipe.favorites.count %></td>
              <td>コメント: <%= recipe.comments.count %></td>
            </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-center mt-4"><%= paginate @recipes %></div>
      </div>
    </div>
  </div>
</div>
</div>

</div>
</div>
<div class= "container">
<div class= "row">
<div class="col-offset-2 col-8 my-2">
  <h2 class="head-line title_h2 text-center bg-warning  my-5 offset-2">ログイン</h2>
</div>
</div>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="form-group col-10 offset-2">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4 form-control-static" %>
  </div>

  <div class="form-group col-10 offset-2">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-4 form-control-static" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group col-10 offset-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group col-10 offset-2">
    <%= f.submit "ログイン", class: 'col-2 btn btn-primary' %>
  </div>
<% end %>


<div class="container">
<div class="row">
<div class="col-offset-2 col-8 my-2">
  
  <h2 class="head-line title_h2 text-center bg-warning  my-5 offset-2">新規会員登録</h2>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group col-10 offset-2">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form-group col-10 offset-2">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group col-10 offset-2">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group col-10 offset-2">
    <%= f.label :パスワード再確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group col-10 offset-2">
    <%= f.submit "新規登録", class: 'col-2 btn btn-primary' %>
  </div>
<% end %>

<div class = "row">
    <div class ="col-10 offset-2 my-2">
      <h5>既に登録済みの方</h5>
      <%= link_to "こちら", new_user_session_path, class: "offset-1 my-5" %>からログインしてください。
    </div>
   </div>
  </div>
</div>
</div>
